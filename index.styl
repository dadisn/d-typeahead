.typeahead
  .typeahead-selection
    display: none
    position: absolute
    max-height: 104px
    margin-top: 2px
    background-color: #fff
    background-image: none
    border: 1px solid #ccc
    border-radius: 4px
    -webkit-box-shadow: 1px 1px 1px 1px rgba(0,0,0,.075)
    box-shadow: 1px 1px 1px 1px rgba(0,0,0,.075)
    overflow: scroll
    .result-item
      height: 34px;
      padding: 6px 12px;
      font-size: 14px;
      line-height: 1.42857143;
      color: #555;
      &:hover
        background-color: #e6e6e6
        border-color: #adadad